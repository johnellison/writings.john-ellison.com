{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}


<header class="main-header post-head {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}">
</header>
{{navigation}}

<main class="content" role="main">
    <article class="{{post_class}} h-entry">

        <header class="post-header">
            <h1 class="post-title p-name"><a href="{{url}}" class="u-url">{{title}}</a></h1>
            <section class="post-meta">
                <time class="post-date dt-published" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
                {{#if tags}}
                    on
                    {{#foreach tags}}
                        <a href="{{url}}" title="{{name}}" class="p-category">{{name}}</a>
                        {{#if @last}}
                        {{else}}
                        ,
                        {{/if}}
                    {{/foreach}}
                {{/if}}
            </section>
        </header>

        <section class="post-content e-content">
            {{content}}
        </section>

    </article>
</main>

{{/post}}
